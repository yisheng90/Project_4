<!DOCTYPE html>
<html>
  <head>
    <title>Project4</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <script src="//releases.flowplayer.org/7.0.2/flowplayer.min.js"></script>

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.min.css"></link>
    <link rel="stylesheet" href="//releases.flowplayer.org/7.0.2/skin/minimalist.css">

    <script src="//releases.flowplayer.org/7.0.2/flowplayer.min.js"></script>
    <link rel="stylesheet" href="//releases.flowplayer.org/7.0.2/skin/skin.css">
  </head>

  <body>
  <div class='ui grid'>
    <div class='row'>
    <div class="ui top attached menu">
      <div class='ui item icon left'>
        <%= link_to 'School', root_path %>
      </div>
      <div class="ui right dropdown icon item">
        <i class="wrench icon"></i>
          <div class="menu">
            <% if current_user %>
              <%= render '/partials/logedin_menu' %>
            <% else %>
              <div class="item">
                <%= link_to 'Login', login_path %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>
    <%= yield %>



  <script>
  $(document).ready(function() {
  $('.ui.dropdown').dropdown();
});
</script>
  </body>
</html>
