<%= render partial: 'admin/partials/dashboard_side_bar' %>

<div class='twelve wide column'>
  <h1>Add User</h1>


<div class='ui ten wide column centered grid'>
  <div class='ui form ten wide column'>
    <%= form_for @user, class:'loading', url:admin_users_path(@user), html: { method: :post } do |f| %>
      <div class="field">
        <label>Name</label>
        <%= f.text_field :name, placeholder: 'Name' %>
      </div>

      <div class="field">
        <label>Email</label>
        <%= f.email_field :email, placeholder: 'Email' %>
      </div>

      <div class="field">
        <label>User Type</label>
        <%= f.select(:user_type, options_for_select([['Admin', 'admin'], ['Teacher', 'teacher'], ['Student', 'student']])) %>
      </div>

      <div class="field">
        <label>Grade</label>
        <%= f.collection_select :grade_id, @grades, :id, :grade%>
      </div>

      <%= f.submit 'Add', class:"ui button" %>
    <% end %>
  </div>
</div>
