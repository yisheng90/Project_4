<%= react_component 'DashboardSidebar', {current_tab: 'profile'} %>


<div class='ui container'>
  <br />
  <br />
  <br />
        <div class='ui form'>
          <h4 class='ui dividing header'>Course Information</h4>
            <%= form_for @course, class:'loading', url:teacher_courses_path(@course), html: { method: :post } do |f| %>
              <div class='field'>
                <label>Course Title</label>
                <%= f.text_field :title, placeholder: 'Title' %>
              </div>

              <div class='field'>
                <label>Course Description</label>
                <%= f.text_area :description, placeholder: 'Descrption', rows: '5' %>
              </div>

              <div class='field'>
                <label>Grade</label>
                <%= f.collection_select :grade_id, @grades, :id, :grade %>
              </div>

              <div class='field'>
                <label>Category</label>
                <%= f.collection_select :category_id, @categories, :id, :category %>
              </div>

              <div class='field'>
                <%= f.submit 'Add Course', class:'ui right floated small green icon button' %>
              </div>
            <% end %>
            </div>
        </div>
  </div>
