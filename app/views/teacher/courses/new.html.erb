<%= render partial: 'teacher/partials/dashboard_side_bar' %>
<div class='ui grid three wide column  centered grid'>
  <div class='column'></div>
  <div class='ui form'>
    <%= form_for @course, class:'loading', url:teacher_courses_path(@course), html: { method: :post } do |f| %>
      <div class="field">
        <label>Title</label>
        <%= f.text_field :title, placeholder: 'Title' %>
      </div>
      <div class="field">
        <label>Description</label>
        <%= f.text_field :description, placeholder: 'Description' %>
      </div>

      <div class="field">
        <label>Grade</label>
        <%= f.collection_select :grade_id, @grades, :id, :grade%>
      </div>


      <%= f.submit 'Add Teacher', class:"ui button" %>
    <% end %>
</div>
