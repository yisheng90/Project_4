<div class='ui grid'>
  <div class='column'></div>
    <%= render partial: 'teacher/partials/dashboard_side_bar' %>
        <div class='ui ten wide column grid'>

    <div class='ui breadcrumb row'>
        <div class='active section'>Profile</div>
    </div>

  
      <div class='ui form'>
      <%= form_for @user, url:teacher_dashboard_path(@user), html: { method: :patch } do |f| %>
        <div class='field'>
          <label>Name</label>
          <%= f.text_field :name %>
        </div>

        <div class='field'>
          <label>Password (leave it blank if you do not want to change.)</label>
          <%= f.password_field :password , placeholder: '******' %>
        </div>

        <div class='field'>
          <label>Date of Birth</label>
          <%= f.date_field :dob %>
        </div>

        <%= f.submit 'Save', class:'ui green button' %>
        <% end %>
      </div>
  </div>
</div>
